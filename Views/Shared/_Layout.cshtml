    <script type="application/ld+json">
        {
        "@@context": "https://schema.org",
        "@@type": "Organization",
        "name": "Zaczytani",
        "alternateName": "Zaczytani w codzienności",
        "url": "http://zaczytani.com.pl/",
        "logo": "http://zaczytani.com.pl/content/static/zaczytani.png",
        "sameAs": [
        "https://www.facebook.com/zaczytaniwcodziennosci",
        "https://www.instagram.com/za.czytani/"
        ]
        }
    </script>
    <script type="application/ld+json">
        {
        "@@context": "https://schema.org/",
        "@@type": "WebSite",
        "name": "Zaczytani",
        "url": "https://zaczytani.com.pl/",
        "potentialAction": {
        "@@type": "SearchAction",
        "target": "https://zaczytani.com.pl/?pageNumber=1&category=&search={search_term_string}",
        "query-input": "required name=search_term_string"
        }
        }
    </script>
    <environment include="Development">
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
    <environment include="Production">
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
</head>
<body>
